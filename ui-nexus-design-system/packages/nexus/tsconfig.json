{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": [
      "jest"
    ]
  },
  "include": [
    "./src",
    "stories",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "./dist/",
    "**/node_modules"
  ]
}
