      <label for="tab-5">Angular</label>
      <label for="tab-6">React</label>
    </div>
    <div class="content">
      <div class="tab">
        {{ section 'components/navigation/stepper/stepper-example.stencil.hbs' }}
      </div>
      <div class="tab">
        {{ section 'components/navigation/stepper/stepper-example.angular.hbs' }}
      </div>
      <div class="tab">
        {{ section 'components/navigation/stepper/stepper-example.react.hbs' }}
      </div>
    </div>
