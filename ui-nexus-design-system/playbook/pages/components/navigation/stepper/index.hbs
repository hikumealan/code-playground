        {{ section 'components/navigation/stepper/stepper.angular.hbs' }}
      </div>
      <div class="tab">
        {{ section 'components/navigation/stepper/stepper.react.hbs' }}
      </div>
    </div>
  </div>

  <h2>NexusStepper Properties</h2>

  <section class="playbook-component-properties">
    {{{ md 'packages/nexus/src/components/nexus-stepper/readme.md'}}}
