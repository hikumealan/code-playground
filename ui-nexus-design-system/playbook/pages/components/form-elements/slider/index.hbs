  <div class="tabs">
    <label for="tab-4">HTML</label>
    <label for="tab-5">Angular</label>
    <label for="tab-6">React</label>
  </div>
  <div class="content">
    <div class="tab">
      {{ section 'components/form-elements/slider/slider-examples.stencil.hbs' }}
    </div>
    <div class="tab">
      {{ section 'components/form-elements/slider/slider-examples.angular.hbs' }}
    </div>
    <div class="tab">
      {{ section 'components/form-elements/slider/slider-examples.react.hbs' }}
    </div>
  </div>
</div>

{{/template}}

