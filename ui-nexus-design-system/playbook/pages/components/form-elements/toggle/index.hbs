  </div>
  <div class="content">
    <div class="tab">
      {{ section 'components/form-elements/toggle/toggle-examples.stencil.hbs' }}
    </div>
    <div class="tab">
      {{ section 'components/form-elements/toggle/toggle-examples.angular.hbs' }}
    </div>
    <div class="tab">
      {{ section 'components/form-elements/toggle/toggle-examples.react.hbs' }}
    </div>
  </div>
</div>

